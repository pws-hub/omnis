{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "types/index.d.ts",
    "types/global.d.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "declaration": true,
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ]
  },
  "include": [
    "./src/**/*"
, "types/global.d.ts", "test"  ]
}